<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="thinkwee.buptroom.activity.ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/wallpaper_4">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/SettingToolbarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:clickable="true"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@color/TextBackGroundColor"
            android:textColor="@color/colorAccent"
            android:text="内测用户"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="fill_parent"
            android:clickable="true"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/TextBackGroundColor"
            android:textColor="@color/colorAccent"
            android:text="StartCounts"
            android:id="@+id/startcountsbt"
            android:layout_marginTop="15dp"/>


    </LinearLayout>




</LinearLayout>
