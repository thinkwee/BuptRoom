<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="thinkwee.buptroom.activity.ShakeTestActivity"
    android:background="@drawable/wallpaper_4"
    >


    <!--摇一摇之后的界面-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/SettingToolbarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:clickable="true"
            android:layout_height="85dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/TextBackGroundColor"
            android:textColor="@color/colorAccent"
            android:text="此时我们为您推荐的教室是"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="85dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/TextBackGroundColor"
            android:textColor="@color/colorAccent"
            android:text="2"
            android:id="@+id/RecommandRoom"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

</LinearLayout>
